<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name= "viewmodel"
            type="com.wookie_soft.covid.presentation.MyVeiwModel"
        />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.MainActivity">

        <Button
            android:id="@+id/main_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_margin="8dp"
            android:onClick="@{()->viewmodel.onClickHandler()}"
            android:text="내 위치 찾기"/>

        <fragment
            android:id="@+id/main_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:navermap_latitude="37.5666805"
            app:navermap_longitude="126.9784147"
            app:navermap_zoom="8"
            app:navermap_mapType="Terrain"
            android:name="com.naver.maps.map.MapFragment" />


    </LinearLayout>



</layout>
